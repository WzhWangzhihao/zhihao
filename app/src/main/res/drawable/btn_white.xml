<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 按下状态 -->
    <item android:state_pressed="true">
	        <layer-list>
	            <item>
	                <shape>
	                    <solid android:color="#4a4946" />
	                    <corners android:radius="5dip"/>
	                </shape>
	             </item>
	            <item android:left="1dip" android:top="1dip" android:bottom="1dip" android:right="1dip">
	                <shape>
	                    <solid android:color="#eee" />
	                    <corners android:radius="4dip"/>
	                </shape>
	             </item>
	        </layer-list>
    </item>
    <!-- 默认状态 -->
	<item>
	            <layer-list>
	                <item>
	                    <shape>
	                        <solid android:color="#4a4946" />
	                        <corners android:radius="5dip"/>
	                    </shape>
	                 </item>
	                <item android:left="1dip" android:top="1dip" android:bottom="1dip" android:right="1dip">
	                    <shape>
	                        <solid android:color="#fff" />
	                        <corners android:radius="4dip"/>
	                    </shape>
	                 </item>
	            </layer-list>
	    </item>
</selector>