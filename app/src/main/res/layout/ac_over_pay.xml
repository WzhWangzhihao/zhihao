<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_left"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="13dp"
            android:paddingTop="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/black"
            android:textSize="@dimen/app_text_size_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="9"
            android:singleLine="true"
            android:text="返回主页"
            android:textColor="@color/topziti"
            android:textSize="@dimen/app_text_size_18"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_right_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="@dimen/app_text_size_14"
            android:visibility="gone" />
    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/duigou"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_over_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxEms="9"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/app_text_size_40" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxEms="9"
        android:singleLine="true"
        android:text="收银成功"
        android:textColor="@color/topziti"
        android:textSize="@dimen/app_text_size_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/tv_over_pay_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/over_pay_button_shape"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="9"
            android:padding="20dp"
            android:singleLine="true"
            android:text="返回首页"
            android:textColor="@color/topziti"
            android:textSize="@dimen/app_text_size_18"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_over_pay_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/over_pay_button_shape"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="9"
            android:padding="15dp"
            android:singleLine="true"
            android:text="打印小票"
            android:textColor="@color/topziti"
            android:textSize="@dimen/app_text_size_18" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"></View>

    </LinearLayout>
</LinearLayout>