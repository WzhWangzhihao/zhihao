<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme">
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- ImageButton背景透明 -->
    <style name="trasnparent_ib" parent="@style/ww">
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="trasnparent_btn" parent="@style/ww">
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="trasnparent_ib_w" parent="@style/fww">
        <item name="android:background">@color/transparent</item>
    </style>
    
    <!-- 单行省略号 -->
    <style name="tv_single_line_fw" parent="@style/fw">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="tv_single_line_center_fw" parent="@style/tv_single_line_fw">
        <item name="android:gravity">center</item>
    </style>
    
    <!-- 基本属性 -->
    <style name="ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fw">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wf">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ff">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
	<style name="fwh" parent="@style/fw">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="wwh" parent="@style/ww">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="fwv" parent="@style/fw">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ffv" parent="@style/ff">
        <item name="android:orientation">vertical</item>
    </style>
	<style name="ffh" parent="@style/ff">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="wwv" parent="@style/ww">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="www" parent="@style/ww">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="fww" parent="@style/fw">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ffwv" parent="@style/ffw">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="fwwv" parent="@style/fww">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="fwwh" parent="@style/fww">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="ffwh" parent="@style/ffw">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ffw" parent="@style/ff">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="wfw" parent="wf">
        <item name="android:layout_weight">1</item>
    </style>
    <style name="wfv" parent="@style/wf">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="wfh" parent="@style/wf">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item> 
        <item name="android:orientation">horizontal</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="DropDownDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>
    <style name="FadeDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
	<style name="SlideUpDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="SlideInLeftDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>
</resources>
